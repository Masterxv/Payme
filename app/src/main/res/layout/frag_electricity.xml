<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/dimen_8"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dimen_12"
        android:weightSum="1">

        <RadioButton
            android:id="@+id/electricBoard"
            android:layout_width="@dimen/dimen_180"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:text=" Electricity Boards"
            android:checked="true"
            android:textSize="@dimen/dimen_16"/>

        <RadioButton
            android:id="@+id/apartments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Apartments"
            android:checked="false"
            android:textSize="@dimen/dimen_16"/>
    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20">

        <EditText
            android:id="@+id/etState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="State"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Electricity Board"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/consumer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etConsumer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Consumer Number"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/fastForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consumer"
        android:textColor="@color/colorAccent"
        android:text=">> Fast Forward" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:id="@+id/get_bill"
        android:text="GET BILL"
        android:textSize="@dimen/dimen_20"
        android:textColor="@color/color_white"
        android:background="@color/colorAccent"
        android:shadowRadius="@android:integer/config_shortAnimTime"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_gravity="center_horizontal"
        android:elevation="@dimen/dimen_6" />

    <LinearLayout
        style="?attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_12"
        android:weightSum="1">

        <Button
            style="?attr/buttonBarButtonStyle"
            android:layout_width="@dimen/dimen_180"
            android:layout_height="wrap_content"
            android:id="@+id/btOffers"
            android:text="Offers"/>

        <Button
            style="?attr/buttonBarButtonStyle"
            android:layout_width="@dimen/dimen_180"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-7dp"
            android:id="@+id/btHelp"
            android:text="Help"
            android:layout_weight="1.06" />
    </LinearLayout>


</LinearLayout>