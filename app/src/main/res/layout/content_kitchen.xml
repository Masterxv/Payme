<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_kitchen="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_kitchen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_250"
        android:background="@color/color_white"
        android:layout_gravity="center"
        card_kitchen:cardCornerRadius="@dimen/dimen_6">

        <ImageView
            android:id="@+id/ivKitchenImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200"
            android:src="@drawable/living_room"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_200"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_kitchen"
                    android:textColor="@color/wallet_hint_foreground_holo_dark" />

                <TextView
                    android:id="@+id/tvItemCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_12"
                    android:layout_below="@+id/tvItemName"
                    android:layout_marginTop="@dimen/dimen_3"
                    android:textColor="@color/com_facebook_likeboxcountview_border_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RatingBar
                    android:id="@+id/rating_bar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:accessibilityLiveRegion="@integer/mr_controller_volume_group_list_fade_out_duration_ms"
                    android:scaleX="0.8"
                    android:scaleY="0.8" />

                <TextView
                    android:id="@+id/tvReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:text="Reviews..."
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>