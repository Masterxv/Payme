<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dimen_6"
    android:paddingRight="@dimen/dimen_6"
    android:layout_marginBottom=".5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:weightSum="1"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mVpMain">

        </android.support.v4.view.ViewPager>
    </LinearLayout>
    <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/fab"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="@dimen/dimen_1"-->
        <!--android:layout_marginRight="@dimen/dimen_8"-->
        <!--android:layout_gravity="bottom|right"-->
        <!--android:src="@drawable/belize" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_weight="0.1"
        android:layout_marginBottom=".5dp"
        android:orientation="vertical">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mVpMain"
            android:layout_gravity="start"
            android:background="#f1f1f1"
            android:fitsSystemWindows="true"
            design:menu="@menu/bottom_nav_main"
            app:itemTextColor="@color/colorAccent"
            app:itemIconTint="@color/color_red">

        </android.support.design.widget.BottomNavigationView>

    </LinearLayout>


</LinearLayout>
